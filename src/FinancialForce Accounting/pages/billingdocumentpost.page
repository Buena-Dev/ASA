<apex:page standardController="fferpcore__BillingDocument__c" extensions="c2g.CODAHelpLoaderController,c2g.BillingDocumentPostController">

 <script src="{!URLFOR($Resource.coda2go,'coda2go/web/script/lib.js')}" type="text/javascript"></script>
	<apex:stylesheet value="{!URLFOR($Resource.c2g__coda2go,'coda2go/web/css/style.css')}"/>
	<script>
		var CODA2GoButtons = new CODA2GoPage();
		var CODA2GoBtnSaveValue = "{!$Label.codaProcessing}";
	</script>
	<apex:form onsubmit="if(CODA2GoButtons.disableSaveButtons){ return CODA2GoButtons.disableSaveButtons(); }">
		<apex:sectionHeader title="{!$Label.c2g__erpbillingdocumentpostconfirmtitle}" subtitle="{!viewstate.DocumentName}" help="{!redirectForHelp1367}"/>
		<apex:pageBlock >
			<apex:pagemessages />
			<apex:pageBlockButtons location="bottom">
				<apex:commandButton value="{!$Label.c2g__codapostbutton}" action="{!post}" id="post_h" styleclass="hiddensubmit"/>
				<apex:commandButton value="{!$Label.c2g__back}" action="{!cancel}" id="cancel_h" styleclass="hiddensubmit" immediate="true" reRender=""/>
				<apex:commandButton value="{!$Label.c2g__codapostbutton}" id="post" onclick="document.getElementById('{!$Component.post_h}').click();return false;" rendered="{!viewstate.CanShowDocument}" />
				<apex:commandButton value="{!$Label.c2g__back}" id="cancel" rerender="" onclick="if(!CODA.queing()){document.getElementById('{!$Component.cancel_h}').click()};return false;"/>
				<script>
	                CODA2GoButtons.initButtons(["{!$Component.post}","{!$Component.cancel}"]);
				</script>
			</apex:pageBlockButtons>
		</apex:pageBlock>
	</apex:form>
</apex:page>